<!DOCTYPE html>
<html>
  <head>
    <title>Linkit</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class = "nav nav-tabs">
        <li class="nav-link"><%= link_to "Linkit", root_path %></li>
        <li class="nav-link"><%= link_to "Topics", topics_path %></li>
        <li class="nav-link"><%= link_to "FAQ", questions_path %></li>
        <!--signup/signin -->
        <div class="pull-right user-info">
          <% if current_user %>
            <li class="gravatar"><%= image_tag current_user.avatar_url(48) %></li>
            <li class="pull-right sign-out"><%= link_to " - Sign Out", session_path(current_user), method: :delete %></li>
            <li class="pull-right"><%= link_to current_user.name, user_path(current_user) %></li>
          <% else %>
            <li><%= link_to "Sign In", new_session_path %></li>
            <li><%= link_to "Sign Up", new_user_path %></li>
          <% end %>
        </div>
      </ul>

      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible">
          <a href="#" type="button" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning alert-dismissible">
          <a href="#" type="button" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
