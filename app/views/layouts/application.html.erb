<!DOCTYPE html>
<html>
  <head>
    <title>Linkit</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class = "nav nav-tabs">
        <li class="nav-link"><%= link_to "Linkit", root_path %></li>
        <li class="nav-link"><%= link_to "About", about_path %></li>
        <li class="nav-link"><%= link_to "Topics", topics_path %></li>
        <li class="nav-link"><%= link_to "Contact", contact_path %></li>
        <li class="nav-link"><%= link_to "FAQ", faq_path %></li>
        <li class="pull-right"><%= link_to "Sign Up", new_user_path %></li>
      </ul>

      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible">
          <a href="#" type="button" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning alert-dismissible">
          <a href="#" type="button" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
