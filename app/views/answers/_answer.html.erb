<%= content_tag :div, class: 'media', id: "answer-#{answer.id}" do %>
  <div class="media-body">
    <small>
      <%= answer.user.name %> answered <%= time_ago_in_words(answer.created_at) %> ago
      <% if user_is_authorized_for_answer?(answer) %>
      | <%= link_to "Delete", [answer.question, answer], method: :delete %>
      <% end %>
    </small>
    <p><%= answer.body %></p>
  </div>
<% end %>
