<br>
<div class="comment-form">
  <%= form_for [post, comment] do |f| %>
    <div class="form-group">
      <%= f.label :body, class: 'sr-only' %>
      <%= f.text_field :body, class: 'form-control', placeholder: "Add a new comment" %>
    </div>
    <%= f.submit "Save", class: 'btn btn-primary' %>
  <% end %>
</div>
